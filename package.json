    "@actions/github": "^6.0.0",
    "normalize-newline": "^4.1.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
